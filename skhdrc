# focus on display
lctrl + lalt - a : yabai -m display --focus west
lctrl + lalt - s : yabai -m display --focus south
lctrl + lalt - s : yabai -m display --focus east
lctrl + lalt - w : yabai -m display --focus north

# Navigation
alt - a : yabai -m window --focus west
alt - s : yabai -m window --focus south
alt - w : yabai -m window --focus north
alt - d : yabai -m window --focus east

# Moving windows
shift + alt - a : yabai -m window --warp west
shift + alt - s : yabai -m window --warp south
shift + alt - w : yabai -m window --warp north
shift + alt - d : yabai -m window --warp east

# Equalize size of windows
shift + alt - b : yabai -m space --balance
shift + alt - r : yabai -m space --rotate 90 && yabai -m space --balance
shift + alt - l : yabai -m config layout | grep 'bsp' && yabai -m config layout float || yabai -m config layout bsp
shift + alt - x : yabai -m query --windows --space | jq -r '.[] | select(.float == 1) | .id' | xargs -I {} yabai -m window {} --toggle border

# Float / Unfloat window
lalt - f: \
    yabai -m window --toggle float; \
    yabai -m window --toggle border

# Make window native fullscreen
lshift + lalt - f  : yabai -m window --toggle zoom-fullscreen
lctrl + lalt - f   : yabai -m window --toggle native-fullscreen