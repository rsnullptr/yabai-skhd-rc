# focus on display
lctrl + lalt - a : yabai -m display --focus west
lctrl + lalt - s : yabai -m display --focus south
lctrl + lalt - d : yabai -m display --focus east
lctrl + lalt - w : yabai -m display --focus north

# Navigation
lalt - a : yabai -m window --focus west
lalt - s : yabai -m window --focus south
lalt - w : yabai -m window --focus north
lalt - d : yabai -m window --focus east

# Moving windows
lctrl + lalt - a : yabai -m window --warp west
lctrl + lalt - s : yabai -m window --warp south
lctrl + lalt - w : yabai -m window --warp north
lctrl + lalt - d : yabai -m window --warp east

# Moving windows between spaces
lshift + lalt - d : yabai -m space --create && yabai -m window --space next && yabai -m space --focus next
lshift + lalt - a : yabai -m window --space prev && yabai -m space --destroy && yabai -m space --focus prev
lshift + lalt - x : yabai -m space --destroy

# Equalize size of windows
lshift + lalt - b : yabai -m space --balance
lshift + lalt - r : yabai -m space --rotate 90 && yabai -m space --balance
lshift + lalt - l : yabai -m config layout | grep 'bsp' && yabai -m config layout float || yabai -m config layout bsp
lshift + lalt - x : yabai -m query --windows --space | jq -r '.[] | select(.float == 1) | .id' | xargs -I {} yabai -m window {} --toggle border

# Float / Unfloat window
lalt - f: \
    yabai -m window --toggle float; \
    yabai -m window --toggle border

# Make window native fullscreen
lshift + lalt - f  : yabai -m window --toggle zoom-fullscreen
lctrl + lalt - f   : yabai -m window --toggle native-fullscreen

